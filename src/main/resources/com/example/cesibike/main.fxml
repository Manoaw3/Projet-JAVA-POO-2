<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainController">
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10; -fx-border-color: #34495e; -fx-border-width: 0 0 1 0;">
         <Button text=" Importer CSV" onAction="#importerCSV" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
         <Button fx:id="startButton" text="▶ Démarrer Production" onAction="#demarrerProduction" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
         <Label text="--" style="-fx-text-fill: #7f8c8d;" />
         <Label text="X" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 2 8; -fx-background-radius: 3;" />
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
         <content>
            <FlowPane fx:id="stationsContainer" alignment="CENTER" hgap="20.0" vgap="20.0" style="-fx-padding: 20;">
            </FlowPane>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <VBox spacing="5.0" style="-fx-padding: 20;">
         <HBox spacing="0.0" style="-fx-border-color: #34495e;">
            <ProgressBar fx:id="globalProgressBar" maxWidth="1.7976931348623157E308" progress="0.0" style="-fx-accent: #1abc9c;" HBox.hgrow="ALWAYS" />
         </HBox>
      </VBox>
   </bottom>
</BorderPane>